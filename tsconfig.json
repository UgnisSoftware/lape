{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es7", "dom"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@lape": ["src/index"],
    }
  },
  "exclude": ["node_modules"]
}
